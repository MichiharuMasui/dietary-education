<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AD_Normal2ResultActivity">

    <ImageView
        android:id="@+id/ivResult"
        android:layout_width="241dp"
        android:layout_height="195dp"
        android:src="@drawable/karei_nitsuke"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.708" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="209dp"
        android:padding="10sp"
        android:text="「左ヒラメ、右カレイ」というように正面から見て左側に目がついているものをヒラメ、右側に目がついているのがカレイだよ。
        仙台を始め三陸海岸付近では大晦日やお正月に子孫繁栄に縁起の良い子持ちのナメタガレイの煮つけを食べる風習があるんだって。"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:layout_width="168dp"
        android:layout_height="92dp"
        android:onClick="onNext"
        android:src="@drawable/ad_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.962"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>