<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AD_Normal3ResultActivity">

    <ImageView
        android:id="@+id/ivResult"
        android:layout_width="310dp"
        android:layout_height="268dp"
        android:src="@drawable/nabe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.754" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:padding="10sp"
        android:text="観光プロモーション企画として、海と大地の恵みが豊富な東松島で１年中“鍋”で盛り上がれるように「鍋のまち東松島」がスタートしたんだよ。
        市内飲食店や宿でとっても美味しいオリジナルの鍋料理が堪能できるんだって。"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:layout_width="157dp"
        android:layout_height="79dp"
        android:onClick="onNext"
        android:src="@drawable/ad_kekka"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.963"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>